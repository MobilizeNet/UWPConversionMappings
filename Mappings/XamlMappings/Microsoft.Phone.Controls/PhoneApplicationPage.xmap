                  <xmap:ActionSequence>
                    <xmap:AddStatementToConstructorFromTemplate>
                      <![CDATA[ this.Loaded += (object sender, Windows.UI.Xaml.RoutedEventArgs args) => Windows.UI.Core.SystemNavigationManager.GetForCurrentView().BackRequested += $propertyValue;  ]]>                      
